<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="table table-condensed">
  <thead>
    <tr>
      <th><%= sortable "name", "Supplier name" %></th>
      <th></th>
    </tr>
  </thead>
  	<% for supplier in @suppliers %>
  <tbody>
    <tr>
      <td class="pull-left"><%= link_to supplier.name, supplier_path(supplier) %></td>
      <td class="pull-right">
        <%= link_to 'Inventory', supplierproducts_path(:supplier_id => supplier.id), :class => 'btn btn-mini' %>
        <%= link_to 'Settings', edit_supplier_path(supplier), :class => 'btn btn-mini' %>
        <%= link_to 'Destroy', supplier_path(supplier), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>